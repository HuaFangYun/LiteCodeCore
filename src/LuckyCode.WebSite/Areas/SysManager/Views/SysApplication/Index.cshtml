
@{
    ViewBag.Title = "应用程序管理";
}

<div class="content-wrapper" id="applicationApp">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            应用程序
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SysManager/Home"><i class="fa fa-dashboard"></i> 主页</a></li>
            <li class="active">应用程序</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header btn-group">
                        <a href="/SysManager/SysApplication/Create" class="btn bg-maroon btn-sm btn-flat "><i class="glyphicon glyphicon-plus"></i>添加</a>
                    </div>
                    <div class="box-body">
                        <table id="Sys_DataGrid" class="table table-hover table-striped table-bordered">
                            <tr>
                                <th>应用名称</th>
                                <th>链接</th>
                                <th>创建时间</th>
                                <th>操作</th>
                            </tr>
                            <tr v-for='item in applications'>
                                <td>{{item.ApplicationName}}</td>
                                <td>{{item.ApplicationUrl}}</td>
                                <td>{{item.CreateTime|dateFormat('YYYY-MM-DD HH:mm')}}</td>
                                <td>
                                    <a v-bind:href="'Edit/'+item.Id" class='btn btn-flat btn-xs btn-info'><i class='glyphicon glyphicon-pencil'></i>编辑</a>
                                    <a  class='btn btn-flat btn-xs btn-warning'><i class='glyphicon glyphicon-remove'></i>删除</a>
                                </td>
                            </tr>
                        </table>
                       @* <pagebar v-bind:current-page-index="currentPageIndex" v-bind:total-row-count="totalRowCount" v-bind:page-size="pageSize" v-on:paged="pageChange"></pagebar>*@
                        
                            <pagination v-bind:total="total" v-on:paged="pageChange" v-bind:current-index="currentIndex"></pagination>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section scripts{
<script type="text/template" id="template_pagination">
    <nav>
        <ul class="pagination">
            <li :class="{'disabled': currentIndex == 1}"><a href="javascript:;" @@click="setCurrent(1)"> 首页 </a></li>
            <li :class="{'disabled': currentIndex == 1}"><a href="javascript:;" @@click="setCurrent(currentIndex - 1)"> 上一页 </a></li>
            <li v-for="p in grouplist" :class="{'active': currentIndex == p.val}"><a href="javascript:;" @@click="setCurrent(p.val)"> {{ p.text }} </a></li>
            <li :class="{'disabled': currentIndex == page}"><a href="javascript:;" @@click="setCurrent(currentIndex + 1)"> 下一页</a></li>
            <li :class="{'disabled': currentIndex == page}"><a href="javascript:;" @@click="setCurrent(page)"> 尾页 </a></li>
        </ul>
        <ul class="pagination pull-right">
            <li><span> 共 {{ total }}  条数据 </span></li>
            <li><span> 每页显示 {{ pageSize }}  条数据 </span></li>
            <li><span> 共 {{ page }} 页 </span></li>
            <li><span> 当前第 {{ currentIndex }} 页 </span></li>
        </ul>
    </nav>
</script>
@*<script src="~/js/pager.js"></script>*@
<script src="~/js/pagination.js"></script>
    <script src="~/js/pages/SysApplicationVue.js" type="text/javascript"></script>
}