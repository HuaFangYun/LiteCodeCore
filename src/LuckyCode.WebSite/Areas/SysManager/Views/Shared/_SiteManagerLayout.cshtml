<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <environment names="Development">
        <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/ionicons.min.css" rel="stylesheet" />
        <link href="~/css/AdminLTE.min.css" rel="stylesheet" />
        <link href="~/lib/bootstraptable/dist/bootstrap-table.min.css" rel="stylesheet" />
        <link href="~/css/skins/skin-blue.min.css" rel="stylesheet" />
        <link href="~/fonts/iconfont.css" rel="stylesheet" />
        <link href="~/lib/iCheck/all.css" rel="stylesheet" />
        <link href="~/css/LuckyStyle.css" rel="stylesheet" />

        <link href="~/css/fine-uploader.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/LuckySite.min.css" asp-append-version="true" />
        <link href="~/lib/iCheck/all.css" rel="stylesheet" asp-append-version="true"/>
    </environment>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    @Html.Partial("_SiteManagerTopMenu")
   
    <!-- Left side column. contains the logo and sidebar -->
        
       @await Component.InvokeAsync("LeftNav")
    @*@Html.RenderAction("LeftNav", "Home")*@
    <!-- Content Wrapper. Contains page content -->


    @RenderBody()
        
      
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.0
        </div>
        <strong>Copyright &copy; 2016-2017 <a href="http://www.luckearth.cn">基础平台</a>.</strong> All rights reserved.
    </footer>
</div><!-- ./wrapper -->
<environment names="Development">
    <script src="~/js/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/jquery-dateFormat.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/localization/messages_zh.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery.unobtrusive-ajax.js"></script>
    <script src="~/lib/bootstraptable/dist/bootstrap-table.js"></script>
    <script src="~/lib/bootstraptable/dist/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/lib/jquery.radioButtonList.js"></script>

    <script src="~/lib/layer/layer.js"></script>
    <script src="~/lib/My97DatePicker/WdatePicker.js"></script>
    <script src="~/lib/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/lib/iCheck/icheck.min.js"></script>
    <script src="~/js/AppUI.js"></script>
    <script src="~/js/app.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/js/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/jquery-dateFormat.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/localization/messages_zh.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery.unobtrusive-ajax.js"></script>
    <script src="~/lib/bootstraptable/dist/bootstrap-table.js"></script>
    <script src="~/lib/bootstraptable/dist/locale/bootstrap-table-zh-CN.js"></script>
    <script src="~/lib/jquery.radioButtonList.js"></script>

    <script src="~/lib/layer/layer.js"></script>
    <script src="~/lib/My97DatePicker/WdatePicker.js"></script>
    <script src="~/lib/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/lib/iCheck/icheck.min.js"></script>
    <script src="~/js/AppUI.js"></script>
    <script src="~/js/app.js"></script>
</environment>
        @RenderSection("scripts", required: false)
</body>
</html>
