
@{
    ViewBag.Title = "Banner管理";
}
<div class="content-wrapper" id='bannerApp'>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Banner管理
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SysManager/Home"><i class="fa fa-dashboard"></i> 主页</a></li>
            <li class="active">Banner管理</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <div class="box-header">
                        <a href="/SysManager/NewsBanner/Create" class="btn bg-maroon btn-sm btn-flat "><i class="glyphicon glyphicon-plus"></i>添加</a>
                    </div>
                    <div class="box-body">
                        <table id="Sys_DataGrid" class="table table-hover table-striped table-bordered">
                            <tr>
                                <th>标题</th>
                                <th>链接</th>
                                <th>创建时间</th>
                                <th>操作</th>
                            </tr>
                            <tr v-for='item in banners'>
                                <td>{{item.Title}}</td>
                                <td>{{item.Url}}</td>
                                <td>{{item.CreateTime|dateFormat('YYYY-MM-DD HH:mm')}}</td>
                                <td>
                                    <a v-bind:href="'Edit/'+item.Id" class='btn btn-flat btn-xs btn-info'><i class='glyphicon glyphicon-pencil'></i>编辑</a>
                                    <a v-on:click="deleteBanner(item.Id)"  class='btn btn-flat btn-xs btn-warning'><i class='glyphicon glyphicon-remove'></i>删除</a>
                                </td>
                            </tr>
                        </table>
                        <pagebar v-bind:current-page-index="currentPageIndex" v-bind:total-row-count="totalRowCount" v-bind:page-size="pageSize" v-on:paged="pageChange"></pagebar>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section scripts{
    <script src="//cdn.bootcss.com/moment.js/2.10.3/moment.js"></script>
    <script src="//cdn.bootcss.com/vue/2.2.6/vue.min.js"></script>
    <script src="//cdn.bootcss.com/vue-resource/1.3.1/vue-resource.js"></script>
    <script src="~/js/pages/NewsBannerVue.js"></script>
}

